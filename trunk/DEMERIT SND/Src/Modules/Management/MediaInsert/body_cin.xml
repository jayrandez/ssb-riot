		<combobox id="cbbFormat"></combobox>
	</panel>
	
	<panel layout="FlowLayout(FlowLayout.LEFT)">
		<label preferredsize="70,25">Title:</label>
		<textfield id="txtTitle" preferredsize="200,25"></textfield>
	</panel>
	
	<panel layout="FlowLayout(FlowLayout.LEFT)">
		<label preferredsize="70,25">Length:</label>
		<textfield id="txtLength" preferredsize="200,25"></textfield>
	</panel>
	
	<panel layout="FlowLayout(FlowLayout.LEFT)">
		<label preferredsize="70,25">Copyright:</label>
		<textfield id="txtCopyright" preferredsize="200,25"></textfield>
	</panel>
	
	<panel layout="FlowLayout(FlowLayout.LEFT)">
		<label preferredsize="70,25">Directors:</label>
