	</panel>
	
	<panel layout="FlowLayout(FlowLayout.LEFT)">
		<label preferredsize="70,25">Producers:</label>
		<autocompletescroll id="scrProducers" preferredsize="300, 70"></autocompletescroll>
	</panel>
	
	<panel layout="FlowLayout(FlowLayout.LEFT)">
