<?xml version="1.0" encoding="UTF-8"?>
<panel layout="GridLayout(0,2,10,10)">
	<panel layout="FlowLayout(FlowLayout.LEFT)">
		<label preferredsize="70,25">Format:</label>
		<combobox id="cbbFormat"></combobox>
	</panel>
	
	<panel layout="FlowLayout(FlowLayout.LEFT)">
		<label preferredsize="70,25">Title:</label>
		<textfield preferredsize="200,25" id="txtTitle"></textfield>
	</panel>
	
	<panel layout="FlowLayout(FlowLayout.LEFT)">
		<label preferredsize="70,25">Pages:</label>
		<textfield preferredsize="50,25" id="txtLength"></textfield>
	</panel>
	
	<panel layout="FlowLayout(FlowLayout.LEFT)">
		<label preferredsize="70,25">Copyright:</label>
		<textfield preferredsize="200,25" id="txtCopyright"></textfield>
	</panel>
	
	<panel layout="FlowLayout(FlowLayout.LEFT)">
		<label preferredsize="70,25">Authors:</label>
		<autocompletescroll id="scrAuthors" preferredsize="300, 70"></autocompletescroll>
		
	</panel>
	
	<panel layout="FlowLayout(FlowLayout.LEFT)">
		<label preferredsize="70,25">Genre:</label>
		<combobox id="cbbGenre"></combobox>
	</panel>
	
	<panel layout="FlowLayout(FlowLayout.LEFT)">
		<label preferredsize="70,25">Categories:</label>
		<autocompletescroll id="scrCategories" preferredsize="300, 70"></autocompletescroll>
	</panel>
	
		<panel layout="FlowLayout(FlowLayout.LEFT)">
		<label preferredsize="70,25">Isbn:</label>
		<textfield id="txtIsbn" preferredsize="200,25"></textfield>
	</panel>
	
	<panel layout="FlowLayout(FlowLayout.LEFT)">
		<label preferredsize="70,25">Edition:</label>
		<textfield id="txtEdition" preferredsize="50,25"></textfield>
	</panel>
	
	<panel layout="FlowLayout(FlowLayout.LEFT)">
		<label preferredsize="70,25">Description:</label>
		<textarea id="tarDescription" preferredsize="250,80"></textarea>
	</panel>

</panel>
