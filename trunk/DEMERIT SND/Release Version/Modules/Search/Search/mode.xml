<?xml version="1.0" encoding="UTF-8"?>
<panel layout="BorderLayout" background="Color.GRAY">
	<panel constraints="BorderLayout.WEST"  background="Color.GRAY">
		<vbox background="Color.GRAY">
			<panel layout="FlowLayout(FlowLayout.LEFT)" background="Color.GRAY">
				<textfield id="txtSearch" preferredsize="320, 25"></textfield>
				<button id="btnSearch">Search</button>
			</panel>
			<panel layout="FlowLayout(FlowLayout.LEFT)" background="Color.GRAY">
				<label>Search By:</label>
				<combobox id="cbbSearchBy"></combobox>
				<panel preferredsize="20,5" background="Color.GRAY"></panel>
				<label>Media Type:</label>
				<combobox id="cbbSearchIn"></combobox>
			</panel>
		</vbox>
	</panel>
</panel>