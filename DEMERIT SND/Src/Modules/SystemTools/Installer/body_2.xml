<?xml version="1.0" encoding="UTF-8"?>

<panel layout="BorderLayout">
	<panel layout="GridBagLayout" constraints="BorderLayout.NORTH">
		<panel layout="BorderLayout">
			<gridbagconstraints gridx="0" gridy="0" fill="GridBagConstraints.HORIZONTAL" weightx="1" />
			<textarea focusable="false" background="Color.WHITE" font="Tahoma-18" wrapstyleword="true" linewrap="true" constraints="BorderLayout.NORTH">
				Please provide the following information related to your database connection. In order to perform transactions and other actions with library media, Demerit must be able to connect to a correctly configured MySQL database.
			</textarea>
		</panel>
		<panel layout="FlowLayout(FlowLayout.LEFT)">
			<gridbagconstraints gridx="0" gridy="1" fill="GridBagConstraints.HORIZONTAL" weightx="1" />
			<label font="Tahoma-16" preferredsize="150, 30">Host Name</label>
			<textfield id="txtHost" preferredsize="200, 30"></textfield>
		</panel>
		<panel layout="FlowLayout(FlowLayout.LEFT)">
			<gridbagconstraints gridx="0" gridy="2" fill="GridBagConstraints.HORIZONTAL" weightx="1" />
			<label font="Tahoma-16" preferredsize="150, 30">Port</label>
			<textfield id="txtPort" preferredsize="200, 30">3306</textfield>
		</panel>
		<panel layout="FlowLayout(FlowLayout.LEFT)">
			<gridbagconstraints gridx="0" gridy="3" fill="GridBagConstraints.HORIZONTAL" weightx="1" />
			<label font="Tahoma-16" preferredsize="150, 30">Database Name</label>
			<textfield id="txtDBName" preferredsize="200, 30"></textfield>
		</panel>
		<panel layout="BorderLayout">
			<gridbagconstraints gridx="0" gridy="4" fill="GridBagConstraints.HORIZONTAL" weightx="1" />
			<textarea focusable="false" background="Color.WHITE" font="Tahoma-18" wrapstyleword="true" linewrap="true">
				Please provide credentials for a user which can connect to this MySQL database from this computer. In order for Demerit to work correctly, this user must have "select", "insert", "update", and "delete" privileges on all tables in the Demerit database.
			</textarea>
		</panel>
		<panel layout="FlowLayout(FlowLayout.LEFT)">
			<gridbagconstraints gridx="0" gridy="5" fill="GridBagConstraints.HORIZONTAL" weightx="1" />
			<label font="Tahoma-16" preferredsize="150, 30">Username</label>
			<textfield id="txtUser" preferredsize="200, 30"></textfield>
		</panel>
		<panel layout="FlowLayout(FlowLayout.LEFT)">
			<gridbagconstraints gridx="0" gridy="6" fill="GridBagConstraints.HORIZONTAL" weightx="1" />
			<label font="Tahoma-16" preferredsize="150, 30">Password</label>
			<passwordfield id="pssPass" preferredsize="200, 30"></passwordfield>
		</panel>
		<panel layout="FlowLayout(FlowLayout.LEFT)">
			<gridbagconstraints gridx="0" gridy="7" fill="GridBagConstraints.HORIZONTAL" weightx="1" />
			<label font="Tahoma-16" preferredsize="150, 30"></label>
			<label font="Tahoma-18" foreground="FF0000" id="lblError"></label>
		</panel>
	</panel>
</panel>